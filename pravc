        <div id="hearts"></div>
        <h1>Agora somos oficialmente um casal! ğŸ’‘</h1>
        <p>Prometo carinho, cuidado e muitos sorrisos. Te amo muito, minha apaixonada por sushi! â¤ï¸</p>
      `;
      startHearts();
    }

    function fugir(btn) {
      const x = Math.random() * (window.innerWidth - 150);
      const y = Math.random() * (window.innerHeight - 100);
      btn.style.position = 'absolute';
      btn.style.left = x + 'px';
      btn.style.top = y + 'px';
    }

    function startHearts() {
      const container = document.getElementById("hearts");
      setInterval(() => {
        const float = document.createElement("div");
        float.classList.add("float");

        // Aleatoriamente decide se Ã© um coraÃ§Ã£o ou uma rosa
        float.innerText = Math.random() < 0.5 ? "â¤ï¸" : "ğŸŒ¹";

        float.style.left = Math.random() * 100 + "vw";
        float.style.animationDuration = 4 + Math.random() * 3 + "s";
        container.appendChild(float);
        setTimeout(() => float.remove(), 7000);
      }, 300);
    }

    // Inicia elementos flutuantes
    startHearts();
  </script>

